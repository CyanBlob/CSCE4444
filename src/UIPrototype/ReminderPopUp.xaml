        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <Label 
                    Name="Notification"
                    Content="Notification Text:"
                    Width="200"
                    FontWeight="Bold"
                    FontSize="20"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    VerticalContentAlignment="Center"/>   
                <TextBox 
                    Name="NotificationText"
                    Text="This is a notification"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    AcceptsReturn="True"
                    Width="280"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label 
                    Name="Hours"
                    Content="Time (24hr):"
                    Width="200"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    VerticalContentAlignment="Center"
                    FontWeight="Bold"
                    FontSize="20"/>     
                <TextBox 
                    Name="HoursText"
                    Text="0"
                    InputScope="Number"
                    AcceptsReturn="True"
                    Width="35"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    VerticalContentAlignment="Center"/>
                <Label 
                    Content="Hours"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    VerticalContentAlignment="Center"
                    Width="55"/>

                <TextBox 
                    Name="MinutesText"
                    Text="0"
                    InputScope="Number"
                    AcceptsReturn="True"
                    Width="35"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    VerticalContentAlignment="Center"/>
                <Label 
                    Content="Minutes"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    VerticalContentAlignment="Center"
                    Width="55"/>

                <TextBox 
                    Name="SecondsText"
                    Text="0"
                    InputScope="Number"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    AcceptsReturn="True"
                    Width="35"/>
                <Label 
                    Content="Seconds"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    VerticalContentAlignment="Center"
                    Width="55"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button 
                    x:Name="ScheduleButton" 
                    Content="Schedule Reminder"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Width="472"
                    Height="40"
                    Click="ScheduleReminder"
                    FontSize="14"
                    Margin="8, 20, 0, 0"
                    />
                
            </StackPanel>
        </StackPanel>


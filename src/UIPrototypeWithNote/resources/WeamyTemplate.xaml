<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:UIPrototype">

    <Color x:Key="color_winblue">#FF274BF0</Color>
    <SolidColorBrush x:Key="brush_winblue" Color="{StaticResource color_winblue}"></SolidColorBrush>

    <Color x:Key="color_shade">#CFCFCF</Color>
    <SolidColorBrush x:Key="brush_shade" Color="{StaticResource color_shade}"></SolidColorBrush>
    
    <Color x:Key="color_offwhite">#FEFEFE</Color>
    <SolidColorBrush x:Key="brush_offwhite" Color="{StaticResource color_offwhite}"></SolidColorBrush>
    
</ResourceDictionary>